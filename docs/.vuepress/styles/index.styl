pre.vue-container
  border-left-width: .5rem
  border-left-style: solid
  border-color: #42b983
  border-radius: 0px
  & > code
    font-size: 14px !important
    & > p
      margin: -5px 0 -20px 0
    code
      background-color: #42b983 !important
      padding: 3px 5px
      border-radius: 3px
      color #000
    em
      color #808080
      font-weight light

// Style just the navbar through overrides
.theme-container {
  .navbar {
    background-color: $navBackgroundColor
    color: $navColor

    .site-name {
      color: $navColor

      &.can-hide {
        display: none
      }
    }

    .links {
      background-color: inherit
    }

    .nav-links a:hover, .nav-links a.router-link-active {
      color: $accentColor
    }

    .dropdown-wrapper .dropdown-title {
      color: inherit
    }

    .dropdown-wrapper .nav-dropdown {
      background-color: $navBackgroundColor
      border: none
      border-top: 3px solid $accentColor
      border-radius: 0px
    }
  }
}
